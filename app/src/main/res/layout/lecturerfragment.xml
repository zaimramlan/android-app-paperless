<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:layout_width="158dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/off_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.08"
        android:layout_marginTop="68dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Take Attendance"
        android:id="@+id/bRecordAttend"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="59dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/bViewAttend" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="View Attendance"
        android:id="@+id/bViewAttend"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#fff"
        android:layout_below="@+id/bRecordAttend"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="View Students"
        android:id="@+id/bDevice"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#fff"
        android:layout_below="@+id/bViewAttend"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/bLogout1"
        android:layout_below="@+id/bDevice"
        android:layout_alignEnd="@+id/bDevice"
        android:layout_alignStart="@+id/bDevice"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#fff" />

</RelativeLayout>